{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": false,
    "types": ["node", "playwright"]
  },
  "include": ["tests/**/*.ts", "page-objects/**/*.ts", "playwright.config.ts"]
}
